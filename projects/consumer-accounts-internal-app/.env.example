# EA Financial Consumer Accounts Web App - Environment Variables

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Internal API Base URL
# Default: http://localhost:3001
VITE_API_URL=http://localhost:3001

# API Timeout (milliseconds)
# Default: 10000
VITE_API_TIMEOUT=10000

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Application Name
VITE_APP_NAME=EA Financial - Consumer Accounts Portal

# Application Version
VITE_APP_VERSION=1.0.0

# Application Environment
# Options: development, staging, production
VITE_APP_ENV=development

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable debug mode (shows detailed console logs)
# Options: true, false
VITE_DEBUG_MODE=false

# Enable analytics tracking
# Options: true, false
VITE_ENABLE_ANALYTICS=false

# Enable service worker for offline capabilities
# Options: true, false
VITE_ENABLE_SW=false

# Enable real-time notifications
# Options: true, false
VITE_ENABLE_NOTIFICATIONS=false

# =============================================================================
# UI CONFIGURATION
# =============================================================================

# Default theme
# Options: light, dark, system
VITE_DEFAULT_THEME=light

# Enable theme switching
# Options: true, false
VITE_ENABLE_THEME_SWITCH=true

# Default page size for paginated lists
VITE_DEFAULT_PAGE_SIZE=20

# Maximum page size allowed
VITE_MAX_PAGE_SIZE=100

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Token refresh threshold (minutes before expiration)
VITE_TOKEN_REFRESH_THRESHOLD=5

# Session timeout warning (minutes)
VITE_SESSION_WARNING_MINUTES=5

# Auto logout timeout (minutes of inactivity)
VITE_AUTO_LOGOUT_MINUTES=30

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development server port
# Default: 3000
VITE_PORT=3000

# Development server host
# Default: localhost
VITE_HOST=localhost

# Enable HTTPS in development
# Options: true, false
VITE_HTTPS=false

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Log level
# Options: error, warn, info, debug
VITE_LOG_LEVEL=info

# Enable performance monitoring
# Options: true, false
VITE_ENABLE_PERFORMANCE_MONITORING=false

# Sentry DSN (if using Sentry for error tracking)
# VITE_SENTRY_DSN=

# =============================================================================
# BRANDING & CUSTOMIZATION
# =============================================================================

# Company logo URL
# VITE_COMPANY_LOGO_URL=

# Support email
VITE_SUPPORT_EMAIL=support@eafinancial.com

# Help documentation URL
# VITE_HELP_URL=

# Terms of service URL
# VITE_TERMS_URL=

# Privacy policy URL
# VITE_PRIVACY_URL=

# =============================================================================
# DEMO & TESTING
# =============================================================================

# Enable demo mode (shows demo credentials on login)
# Options: true, false
VITE_DEMO_MODE=true

# Mock API responses (for development without backend)
# Options: true, false
VITE_MOCK_API=false

# Seed data for development
# Options: true, false
VITE_ENABLE_SEED_DATA=false

# =============================================================================
# PERFORMANCE & OPTIMIZATION
# =============================================================================

# Enable service worker caching
# Options: true, false
VITE_ENABLE_CACHING=true

# Cache expiration time (hours)
VITE_CACHE_EXPIRATION_HOURS=24

# Enable lazy loading of components
# Options: true, false
VITE_ENABLE_LAZY_LOADING=true

# =============================================================================
# ACCESSIBILITY
# =============================================================================

# Enable accessibility features
# Options: true, false
VITE_ENABLE_A11Y=true

# Enable high contrast mode
# Options: true, false
VITE_ENABLE_HIGH_CONTRAST=true

# Enable screen reader support
# Options: true, false
VITE_ENABLE_SCREEN_READER=true

# =============================================================================
# NOTES
# =============================================================================

# 1. Copy this file to .env for development
# 2. Create .env.local for local overrides (git-ignored)
# 3. Create .env.production for production builds
# 4. All VITE_ prefixed variables are exposed to the client
# 5. Never commit sensitive data like API keys to version control
# 6. Use proper environment-specific values in production
